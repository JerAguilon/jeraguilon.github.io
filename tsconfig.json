{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "typeRoots": ["./@types/", "node_modules/@types/"],
        "baseUrl": "src",
        "paths": {
            "src/*": ["./src/*"]
        }
    },
    "include": [
        "./src/**/*",
        "./@types/**/*"
    ]
}
